{
  "name": "ReVision",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Chrome extension that makes websites easier to read for dyslexics.",
  "icons": {
   "default_icon": "icon.png", // change this to be whatever our button will look like
   "default_popup": "popup.html" // can add pop up if we want
  },
  // not sure whether we should be fiddling with background here or in css
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  // customize the options here
  "options_page": "src/options_custom/index.html",
  "page_action": {
    "icon": " ", // i.e. rainbow slider, color graph etc.
    "title": "  ",
    "popup": "  "   // the side bar that holds all the color stuff?
                    // idk if use popup for that or diff tool
  },
  "permissions": [
    "contentSettings"
  ],
  // pulls content from google for now-
  // should it be that it pulls content from whatever website you're on?
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*"
      ],
      // the pretty stuff
      "css": [
        "src/inject/inject.css"
      ]
    }
  ]
}
